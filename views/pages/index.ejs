<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>PE Tracker</title>
</head>
<body style="background-color: aqua;">
    <h1>PE Tracker</h1>
    <form id=obsForm>
        <% tasks.forEach(function(r) {%>
            <button id='<%= r.id %>'
                onclick='javascript:logTask(<%= r.id %>);'><%= r.name %>
            </button>            
            
        
        <output id='<%= r.id %>
            var durationTime = 'document.createElement(<%= r.duration %>);>'   
        </output>
        <br /><br />
        
        <% }); %>
    </form>     
    <script>
        async = true;
    let currentTaskId = null;
    const logTask = async function(id) {

        const response = await fetch('/log',  {
            method: 'POST',
            headers: {
              'Accept': 'application/json',
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                users_id: -1,
                students_id: -1,
                tasks_id: id,
                duration: "'+00:00:01'"
            })
        });
        const result = await response.text();
        console.log(result);
        currentTaskId = id;
    };
    </script>
    </form>
</body>
</html>